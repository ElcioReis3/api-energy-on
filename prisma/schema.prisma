generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model client {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name   String   
  privy    String
  contact  String?
  email String
  meter      String
  address String?
  birth DateTime
  count_meter Int
}


model cobrance {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name String
  count_meter Int
  meter String 
  currentDate DateTime
  maturityDate DateTime
  price Float
  status Status?
  idCobrance String?
}

model Payment {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  payment_id String @unique
  status String
  user_id String
  used Boolean @default(false)
  created_at DateTime? @default(now())
}

enum Status {
  VENCIDO
  PAGO
  ABERTO
}